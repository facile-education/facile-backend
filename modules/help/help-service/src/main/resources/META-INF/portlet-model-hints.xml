<?xml version="1.0"?>

<model-hints>
	<model name="com.weprode.nero.help.model.HelpCategory">
		<field name="categoryId" type="long" />
		<field name="categoryName" type="String" />
		<field name="serviceId" type="long" />
		<field name="position" type="int" />
	</model>
	<model name="com.weprode.nero.help.model.HelpItem">
		<field name="itemId" type="long" />
		<field name="categoryId" type="long" />
		<field name="itemName" type="String" />
		<field name="videoURL" type="String">
			<hint name="max-length">200</hint>
		</field>
		<field name="videoDescription" type="String">
			<hint-collection name="TEXTAREA" />
		</field>
		<field name="manual" type="String">
			<hint-collection name="TEXTAREA" />
		</field>
		<field name="position" type="int" />
		<field name="language" type="String" />
		<field name="isManagement" type="boolean" />
	</model>
	<model name="com.weprode.nero.help.model.HelpItemRole">
		<field name="helpItemRoleId" type="long" />
		<field name="itemId" type="long" />
		<field name="roleId" type="long" />
	</model>
	<model name="com.weprode.nero.help.model.HelpLink">
		<field name="linkId" type="long" />
		<field name="itemId" type="long" />
		<field name="linkName" type="String" />
		<field name="linkUrl" type="String" />
	</model>
	<model name="com.weprode.nero.help.model.HelpQuestion">
		<field name="questionId" type="long" />
		<field name="itemId" type="long" />
		<field name="question" type="String">
			<hint name="max-length">200</hint>
		</field>
		<field name="answer" type="String">
			<hint-collection name="TEXTAREA" />
		</field>
	</model>
	<model name="com.weprode.nero.help.model.HelpRelation">
		<field name="relationId" type="long" />
		<field name="itemId" type="long" />
		<field name="relatedItemId" type="long" />
	</model>
</model-hints>