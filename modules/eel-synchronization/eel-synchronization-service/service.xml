<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.4.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_4_0.dtd">

<service-builder dependency-injector="ds" package-path="com.weprode.nero.eel.synchronization">
	<namespace>EELSynchro</namespace>

	<entity name="Synchronization" local-service="true" remote-service="false" />

	<entity name="ParentSynchro" local-service="true" remote-service="false">
		<column name="schoolId" type="long" primary="true" />
		<column name="startDate" type="Date" />
		<column name="endDate" type="Date" />
		<column name="fileName" type="String" />
		<column name="lineCount" type="long" />
		<column name="errorCount" type="long" />

		<finder return-type="ParentSynchro" name="schoolId">
			<finder-column name="schoolId"/>
		</finder>
	</entity>

</service-builder>